{
  "program": "p4src/router.p4",
  "language": "p4-14",
  "targets": {
    "multiswitch": {
      "model": "tofino",
      "_bmv2_log": true,
      "_pcap_dump": true,
      "auto-control-plane": true,
      "_cli": true,
      "controller_module": "itch_controller",
      "links": [["h1", "s1"], ["h2", "s1"], ["h9", "s1"]],
      "hosts": {
        "h1": {
            "cmd": "./controller_proxy.py 1212",
            "startup_sleep": 0.2,
            "wait": false
        },
        "h2": {
            "cmd": "./receiver -b 134217728 -t /tmp/p4app_logs/ts.bin -l h2 -p 1234 h1 1212 ABC",
            "_cmd": "/tmp/p4app_logs/tcpdump -i $(echo h_2 | tr -d _)-eth0 -w /theo/itch.pcap",
            "startup_sleep": 1.5,
            "wait": false
        },
        "h9": {
            "cmd": "./replay -r 1000 -t A -m 180000 -s -h 255.255.255.255 -p 1234 /theo/Downloads/08302017.NASDAQ_ITCH50; sleep 2",
            "wait": true
        }
      },
      "switches": {
          "s1": {
              "commands": "commands.txt"
          }
      }
    }
  }
}
