{
  "program": "p4src/router.p4",
  "language": "p4-14",
  "targets": {
    "multiswitch": {
      "model": "tofino",
      "bmv2_log": true,
      "pcap_dump": true,
      "auto-control-plane": true,
      "controller_module": "camus_controller",
      "cli": false,
      "links": [["h1", "s1"], ["h2", "s1"], ["h3", "s1"], ["h4", "s1"], ["h5", "s1"]],
      "parameters": {
          "ACTIVEMQ_CONF": "/tmp/amq_camus_conf",
          "ACTIVEMQ_USER_CLASSPATH": "/tmp/activemq-all-5.16.0-SNAPSHOT.jar",
          "_ACTIVEMQ_USER_CLASSPATH": "/tmp/activemq-all-5.15.0.jar",
          "CAMUS_PUBLISH_HOSTNAME": "255.255.255.255",
          "CAMUS_PUBLISH_PORT": "1234",
          "CAMUS_CONTROLLER_HOSTNAME": "10.0.2.101"
      },
      "hosts": {
        "h1": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq console",
            "startup_sleep": 1.5,
            "wait": false
        },
        "h2": {
            "cmd": "./controller_proxy.py 12121",
            "startup_sleep": 0.1,
            "wait": false
        },
        "h3": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq consumer --destination topic://1 --brokerUrl \"tcp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "startup_sleep": 0.5,
            "wait": true
        },
        "h4": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq consumer --destination topic://1 --brokerUrl \"tcp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "startup_sleep": 0.5,
            "wait": true
        },
        "h5": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq producer --destination topic://1 --persistent false --brokerUrl \"tcp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "wait": true
        }
      },
      "_baseline_amq_hosts": {
        "h1": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq console",
            "startup_sleep": 1.5,
            "wait": false
        },
        "h2": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq consumer --destination topic://1 --brokerUrl \"udp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "startup_sleep": 1.0,
            "wait": true
        },
        "h3": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq consumer --destination topic://1 --brokerUrl \"udp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "startup_sleep": 1.0,
            "wait": true
        },
        "h4": {
            "cmd": "./apache-activemq-5.15.0/bin/activemq producer --destination topic://1 --persistent false --brokerUrl \"udp://h1:61616?wireFormat.maxInactivityDuration=0\" --messageCount 2",
            "wait": true
        }
      },
      "switches": {
          "s1": {
              "commands": "commands.txt"
          }
      }
    }
  }
}
